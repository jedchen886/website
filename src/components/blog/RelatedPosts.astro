---
import { APP_BLOG } from 'astrowind:config';

import { getRelatedPosts } from '~/utils/blog';
import BlogHighlightedPosts from '../widgets/BlogHighlightedPosts.astro';
import type { Post } from '~/types';
import { getBlogPermalink } from '~/utils/permalinks';

export interface Props {
  post: Post;
}

const { post } = Astro.props;

const relatedPosts = post.tags ? await getRelatedPosts(post, 4) : [];

// Detect current language from URL path
const currentPath = Astro.url.pathname;
const isEnglish = currentPath.startsWith('/en/');
const langPrefix = isEnglish ? '/en' : currentPath.startsWith('/cn/') ? '/cn' : '';
const relatedTitle = isEnglish ? 'Related News' : '相关新闻';
const viewAllText = isEnglish ? 'View All News' : '查看所有新闻';
---

{
  APP_BLOG.isRelatedPostsEnabled ? (
    <BlogHighlightedPosts
      classes={{
        container:
          'pt-0 lg:pt-0 md:pt-0 intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade',
      }}
      title={relatedTitle}
      linkText={viewAllText}
      linkUrl={`${langPrefix}${getBlogPermalink()}`}
      postIds={relatedPosts.map((post) => post.id)}
    />
  ) : null
}
