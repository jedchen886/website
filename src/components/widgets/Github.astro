---
import { Picture } from "astro:assets";
import Box from "~/components/ui/box.astro";
const { description, name, stars, logo_url, age_months } = Astro.props;
import { Icon } from 'astro-icon/components'

---



<!-- Modified Box component -->
<Box
  class="w-72 h-64 flex flex-col justify-between shrink-0 snap-start p-6 bg-white rounded-md shadow-sm">
  <blockquote class="text-xs [text-wrap:balance]">{description}</blockquote>
  <div class="flex items-center gap-3">
    <div class="shrink-0">
      <Picture
        class="rounded-full w-12 h-12 object-cover bg-slate-100"
        src={logo_url}
        alt={name}
        width="48"
        height="48"
      />
    </div>
    <div class="flex flex-col w-full">
      <h4 class="font-medium text-slate-800 mb-1">{name}</h4>
      <div class="flex items-center gap-3">
        <div class="flex items-center text-yellow-600 text-sm">
          <Icon name="tabler:star-filled" class="w-4 h-4 mr-1" />
          {stars}
        </div>
        <div class="flex items-center text-blue-600 text-sm">
          <Icon name="tabler:calendar-month" class="w-4 h-4 mr-1" />
          {age_months} mo
        </div>
      </div>
    </div>
  </div>
</Box>