---
import { APP_BLOG } from 'astrowind:config';

import Grid from '~/components/blog/Grid.astro';

import { getBlogPermalink } from '~/utils/permalinks';
import { findLatestPosts } from '~/utils/blog';
import type { Widget } from '~/types';
import Button from '../ui/Button.astro';

export interface Props extends Widget {
  title?: string;
  linkText?: string;
  linkUrl?: string | URL;
  information?: string;
  count?: number;
  useGradient?: boolean;
}

const {
  title = await Astro.slots.render('title'),
  linkText = '查看所有新闻', //'View all posts',
  linkUrl = getBlogPermalink(),
  information = await Astro.slots.render('information'),
  count = 4,
  useGradient = true,

  id,
} = Astro.props;

const posts = APP_BLOG.isEnabled ? await findLatestPosts({ count }) : [];
const sectionClass = useGradient ? 'news-section-gradient' : '';
---


{
  APP_BLOG.isEnabled ? (
    <section class={`py-12 md:py-16 ${sectionClass}`} id={id}>
      <div class="max-w-6xl mx-auto px-4 sm:px-6">
        <div class="mb-6 md:mb-8 text-center">
          {title && (
            <h2
              class="font-bold leading-tighter tracking-tighter font-heading text-2xl md:text-3xl text-gray-800"
              set:html={title}
            />
          )}
          {APP_BLOG.list.isEnabled && linkText && linkUrl && (
            <Button variant="link" href={linkUrl} class="text-sm mt-2">
              {linkText} »
            </Button>
          )}
        </div>
        {information && (
          <div class="flex flex-col lg:justify-between lg:flex-row mb-6">
            <p class="text-muted text-sm lg:max-w-md" set:html={information} />
          </div>
        )}
        <Grid posts={posts} />
      </div>
    </section>
  ) : (
    <Fragment />
  )
}
