---
// Import the new font
import '@fontsource/roboto'; // Example for Roboto font
import '@fontsource/noto-sans'; // Example for Roboto font
import '@fontsource/poppins'; // Example for Roboto font
import '@fontsource/manrope'; // Example for Manrope font

import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
