---
import Features4 from '~/components/widgets/Features4.astro';
import ParameterTable from '~/components/widgets/ParameterTable.astro';
import Layout from '~/layouts/PageLayout.astro';
import adora1minifeature1 from '~/assets/images/product/adora1-mini/adora1-mini-feature1.png';
import adora1minifeature2 from '~/assets/images/product/adora1-mini/adora1-mini-feature2.png';
import adora1minifeature3 from '~/assets/images/product/adora1-mini/adora1-mini-feature3.png';
import adora1minifeature4 from '~/assets/images/product/adora1-mini/adora1-mini-feature4.png';

const metadata = {
  title: 'Adora1 Mini',
};
---

<Layout metadata={metadata}>
    <!-- features -->
    <Features4
    columns={2}
    isBeforeContent={true}
    title="ADORA1 Mini"
    subtitle="轻量经济型的室内单臂轮式机器人"
    items={[
      {
        title: '持续学习与适应能力',
        description:
          'Adora机器人搭载具身人工智能，能够通过与环境互动以及用户直接教学不断进化。不同于传统工业机器人受限于严格的规则，Adora机器人可以动态适应并提升自身能力。',
        icon: '',
        image: {
          src: adora1minifeature1,
          alt: 'adora1 Mini Feature 1'
        },
      },
      {
        title: '轻松任务训练',
        description:
          'Adora机器人配备直观的数据采集工具，可以轻松掌握用户演示的家庭任务，包括清洁、整理桌面、洗衣、拾取水果，甚至烹饪，让日常生活更加轻松。',
        icon: '',
        image: {
          src: adora1minifeature2,
          alt: 'adora1 Mini Feature 2'
        },
      },
      {
        title: '多模态自然交互',
        description:
          'Adora机器人大脑具备视觉和语言输入理解能力，用户可以通过语言或视觉指令自然、轻松地与机器人互动，实现无缝沟通。',
        icon: '',
        image: {
          src: adora1minifeature3,
          alt: 'adora1 Mini Feature 3'
        },        
      },
      {
        title: '社区驱动的快速提升',
        description:
          'Adora机器人连接活跃的社区，通过共享知识与经验形成集体“大脑”，实现所有机器人技能的快速提升，持续增强机器人的效能。',
        icon: '',
        image: {
          src: adora1minifeature4,
          alt: 'adora1 Mini Feature 4'
        },
      },
    ]}
  />

  <!-- Apply -->
    <Features4
    columns={2}
    isBeforeContent={true}
    title="应用场景"
    subtitle="ADORA1 mini的应用场景"
    items={[
      {
        title: '家务劳动',
        description:
          '',
        icon: '',
        image: {
          src: adora1minifeature1,
          alt: 'adora1 Mini apply1'
        },
      },
      {
        title: '数据采集',
        description:
          '',
        icon: '',
        image: {
          src: adora1minifeature2,
          alt: 'adora1 Mini apply2'
        },
      },
      {
        title: '科研教学',
        description:
          '',
        icon: '',
        image: {
          src: adora1minifeature3,
          alt: 'adora1 Mini apply3'
        },        
      },
      {
        title: '工业操作',
        description:
          '',
        icon: '',
        image: {
          src: adora1minifeature4,
          alt: 'adora1 Mini apply4'
        },
      },
    ]}
  />
  
  <!-- 参数规格 -->
  <ParameterTable 
    title="Adora1 Mini参数规格"
    subtitle="主要的软件和硬件参数"

    MyTableHeads = {[
      {
        tablehead1: "模块",
        tablehead2: "内容",
        tablehead3: "参数",
      },
    ]}

    MyTableCells1 = {[
	  {
		 module: "整体参数",
		 content: "产品重量",
		 parameter: "约30KG",
	  },
	  {
		 module: "整体参数",
		 content: "总体尺寸",
		 parameter: "不含机械臂：约480mm(宽)*716mm(长)*1386mm(高)，含机械臂：约755mm(宽)*716mm(长)*1386mm(高)",
	  },
	  {
		 module: "整体参数",
		 content: "工作时长",
		 parameter: "约2H",
	  },
	  {
		 module: "整体参数",
		 content: "最大速度",
		 parameter: "约1.2m/s",
	  },
	  {
		 module: "整体参数",
		 content: "电池容量",
		 parameter: "24V 20AH",
	  },
	  {
		 module: "整体参数",
		 content: "接口",
		 parameter: "电源开关，急停按钮*1，USB*2，网口*1，HDMI*1，天线延长线口*1",
	  },
   ]}

   MyTableCells2 = {[
	  {
		 module: "轮式底盘",
		 content: "尺寸",
		 parameter: "长716*宽480*高XXXmm",
	  },
	  {
		 module: "轮式底盘",
		 content: "载重",
		 parameter: "80KG",
	  },
	  {
		 module: "轮式底盘",
		 content: "电机类型",
		 parameter: "直流无刷伺服电机",
	  },
	  {
		 module: "轮式底盘",
		 content: "转向方式",
		 parameter: "双轮差速原地转向",
	  },
   ]}
  />
</Layout>
