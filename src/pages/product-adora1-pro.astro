---
import Features4 from '~/components/widgets/Features4.astro';
import ParameterTable from '~/components/widgets/ParameterTable.astro';
import Layout from '~/layouts/PageLayout.astro';
import adora1profeature1 from '~/assets/images/product/adora1-pro/adora1-pro-feature1.png';
import adora1profeature2 from '~/assets/images/product/adora1-pro/adora1-pro-feature2.png';
import adora1profeature3 from '~/assets/images/product/adora1-pro/adora1-pro-feature3.png';
import adora1profeature4 from '~/assets/images/product/adora1-pro/adora1-pro-feature4.png';
import adora1proapply1 from '~/assets/images/product/adora1-mini/adora1-mini-feature1.png';
import adora1proapply2 from '~/assets/images/product/adora1-pro/adora1-pro-apply2.png';
import adora1proapply3 from '~/assets/images/product/adora1-pro/adora1-pro-apply3.png';
import adora1proapply4 from '~/assets/images/product/adora1-pro/adora1-pro-apply4.png';

const metadata = {
  title: 'Adora1 Pro',
};
---

<Layout metadata={metadata}>
    <!-- features -->
    <Features4
    columns={2}
    isBeforeContent={true}
    title="ADORA1 Pro"
    subtitle="ADORA1 Pro四轮单臂机器人"
    items={[
      {
        title: '适合室内外各类大载重场景',
        description:
          'ADORA1 Pro四轮机器人采用刚性底盘，配备直流无刷伺服电机轮毂，能够承载80KG重量，适应复杂地形，实现轻度越野能力。',
        icon: '',
        image: {
          src: adora1profeature1,
          alt: 'adora1 Pro Feature 1'
        },
      },
      {
        title: '自主导航多车协同',
        description:
          'ADORA1 Pro四轮机器人配备激光雷达和视觉传感器，配合DORA系统支持，能够实现自主导航和避障功能，支持多车协同。',
        icon: '',
        image: {
          src: adora1profeature2,
          alt: 'adora1 Pro Feature 2'
        },
      },
      {
        title: '多模态自然交互',
        description:
          'ADORA1 Pro大脑具备视觉和语言输入理解能力，用户可以通过语言或视觉指令自然、轻松地与机器人互动，实现无缝沟通。',
        icon: '',
        image: {
          src: adora1profeature3,
          alt: 'adora1 Pro Feature 3'
        },        
      },
      {
        title: '支持DORA二次开发',
        description:
          'ADORA1 Pro连接活跃的社区，通过共享知识与经验，支持二次开发，持续增强机器人的能力。',
        icon: '',
        image: {
          src: adora1profeature4,
          alt: 'adora1 Pro Feature 4'
        },
      },
    ]}
  />

  <!-- Apply -->
    <Features4
    columns={2}
    isBeforeContent={true}
    title="应用场景"
    subtitle="ADORA1 Pro的应用场景"
    items={[
      {
        title: '数据采集',
        description:
          '',
        icon: '',
        image: {
          src: adora1proapply1,
          alt: 'adora1 Pro apply1'
        },
      },
      {
        title: '生产搬运',
        description:
          '',
        icon: '',
        image: {
          src: adora1proapply2,
          alt: 'adora1 Pro apply2'
        },
      },
      {
        title: '赛事支持',
        description:
          '',
        icon: '',
        image: {
          src: adora1proapply3,
          alt: 'adora1 Pro apply3'
        },        
      },
      {
        title: '农业采摘',
        description:
          '',
        icon: '',
        image: {
          src: adora1proapply4,
          alt: 'adora1 Pro apply4'
        },
      },
    ]}
  />
  
  <!-- 参数规格 -->
  <ParameterTable 
    title="Adora1 Pro参数规格"
    subtitle="主要的软件和硬件参数"

    MyTableHeads = {[
      {
        tablehead1: "模块",
        tablehead2: "内容",
        tablehead3: "参数",
      },
    ]}

    MyTableCells1 = {[
	  {
		 module: "整体参数",
		 content: "产品重量",
		 parameter: "约30KG",
	  },
	  {
		 module: "整体参数",
		 content: "总体尺寸",
		 parameter: "不含机械臂：约480mm(宽)*716mm(长)*1386mm(高)，含机械臂：约755mm(宽)*716mm(长)*1386mm(高)",
	  },
	  {
		 module: "整体参数",
		 content: "工作时长",
		 parameter: "约2H",
	  },
	  {
		 module: "整体参数",
		 content: "最大速度",
		 parameter: "约1.2m/s",
	  },
	  {
		 module: "整体参数",
		 content: "电池容量",
		 parameter: "24V 20AH",
	  },
	  {
		 module: "整体参数",
		 content: "接口",
		 parameter: "电源开关，急停按钮*1，USB*2，网口*1，HDMI*1，天线延长线口*1",
	  },
   ]}

   MyTableCells2 = {[
	  {
		 module: "轮式底盘",
		 content: "尺寸",
		 parameter: "长716*宽480*高XXXmm",
	  },
	  {
		 module: "轮式底盘",
		 content: "载重",
		 parameter: "80KG",
	  },
	  {
		 module: "轮式底盘",
		 content: "电机类型",
		 parameter: "直流无刷伺服电机",
	  },
	  {
		 module: "轮式底盘",
		 content: "转向方式",
		 parameter: "双轮差速原地转向",
	  },
   ]}
  />
</Layout>
