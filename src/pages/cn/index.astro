---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
//import StepDORA from '~/components/widgets/StepsDORA.astro'
import Adora1Mini from '~/components/product/Adora1-Mini.astro';
import Adora1Pro from '~/components/product/Adora1-Pro.astro';
import Adora2Pro from '~/components/product/Adora2-Pro.astro';
import Adora2Max from '~/components/product/Adora2-Max.astro';
import Adora2Mini from '~/components/product/Adora2-Mini.astro';
import ProductFeatureCN from '~/components/product/ProductFeatureCN.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import Adora1Nano from '~/components/product/Adora1-Nano.astro';

const metadata = {
  title: 'DORA Robotics',
  //description: 'DORA Robotics is a collaborative open-source robot for home and business.',
  description: 'ADORA是用于家庭和商业的开源机器人产品系列',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata} defaultNavTheme="dark">

  <!-- Hero Widget ******************* -->
  <Hero
    bg={`
      <div class="absolute inset-0">
        <div class="w-full h-full bg-cover bg-center" style="background-image: url('/images/robot-family-pixar.png');"></div>
      </div>
    `}
  >
    <Fragment slot="title">
      <div class="mt-40">
        <span class="text-gray-50 text-5xl md:text-6xl lg:text-7xl tracking-tight dark:text-white highlight">
我们是您的机器人朋友</span
        >
      </div>
    </Fragment>

    <Fragment slot="subtitle">
      <div>
        <span class="hidden sm:inline text-2xl text-white">
          <!-- GOSIM Widget *******************
          <span class="font-semibold">ADORA</span> is an open-source robot project for home and business. <br />  -->
          <span class="font-semibold">ADORA</span> 是用于家庭和商业的开源机器人产品系列 <br />
        </span>
      </div>
    </Fragment>
  </Hero>

  <!-- GOSIM Widget ******************* -->
  <div id="adora2-Max">
    <Adora2Max />
  </div>
  <div id="adora2-pro">
    <Adora2Pro />
  </div>
  <div id="adora2-mini">
    <Adora2Mini />
  </div>
  <div id="adora1-pro">
    <Adora1Pro />
  </div>
  <!--
  <div id="adora1-mini">
    <Adora1Mini />
  </div>
-->
  <div id="adora1-pro">
    <Adora1Nano />
  </div>
  <ProductFeatureCN />

  <BlogLatestPosts title="新闻中心" information={``} />

  <!-- Gradient CTA Section (Beijing2025 style) -->
  <section class="section-gradient py-16 md:py-24">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        开启您的机器人之旅
      </h2>
      <p class="text-lg md:text-xl text-white/90 mb-8 max-w-2xl mx-auto">
        ADORA机器人助力科研教育、商业应用与家庭生活，让智能触手可及
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/cn/support#contact" class="cta-btn-gradient">
          <span>购买与合作</span>
        </a>
        <a href="/cn/about" class="cta-btn-gradient">
          <span>了解更多</span>
        </a>
      </div>
    </div>
  </section>

