---
import Features4 from '~/components/widgets/Features4.astro';
import ParameterTable from '~/components/widgets/ParameterTable.astro';
import Layout from '~/layouts/PageLayout.astro';
import adora2profeature1 from '~/assets/images/product/adora2-pro/adora2-pro-feature1.png';
import adora2profeature2 from '~/assets/images/product/adora2-pro/adora2-pro-feature2.png';
import adora2profeature3 from '~/assets/images/product/adora2-pro/adora2-pro-feature3.png';
import adora2profeature4 from '~/assets/images/product/adora2-pro/adora2-pro-feature4.png';
import adora2proapply1 from '~/assets/images/product/adora2-pro/adora2-pro-apply1.png';
import adora2proapply2 from '~/assets/images/product/adora2-pro/adora2-pro-apply2.png';
import adora2proapply3 from '~/assets/images/product/adora2-pro/adora2-pro-apply3.png';
import adora2proapply4 from '~/assets/images/product/adora2-pro/adora2-pro-apply4.png';

const metadata = {
  title: 'Adora 2 Pro机器人',
};
---

<Layout metadata={metadata} defaultNavTheme="dark">
  <!-- Hero -->
  <section class="relative -mt-[76px] not-prose">
    <div class="relative w-full">
      <img
        src="/images/adora-2-pro-lab-clean.png"
        alt="ADORA 2 Pro"
        class="w-full h-auto"
      />
      <div class="absolute inset-0 flex flex-col items-center justify-center">
        <div class="bg-black/20 backdrop-blur-sm px-8 py-6 rounded-2xl">
          <h1 class="text-white text-5xl md:text-6xl lg:text-7xl tracking-tight font-bold text-center">
            ADORA 2 Pro
          </h1>
          <p class="text-xl md:text-2xl text-white/90 mt-4 text-center">
            三轮升降通用型移动式机器人
          </p>
        </div>
      </div>
    </div>
  </section>

    <!-- features -->
    <Features4
    columns={2}
    isBeforeContent={true}
    title="产品特点"
    subtitle="ADORA 2 Pro 的核心优势"
    items={[
      {
        title: '小巧三轮底盘运动灵活',
        description:
          'ADORA 2 Pro机器人采用小底盘设计方案，在比较狭窄的室内运动时灵活方便。',
        icon: '',
        image: {
          src: adora2profeature1,
          alt: 'adora2 pro Feature 1'
        },
      },
      {
        title: '配四路相机和激光雷达',
        description:
          '双臂腕部、头部、柱顶各配1个相机总计四路深度和广角相机，底盘配备激光雷达，能够实现更精准的环境感知和导航。',
        icon: '',
        image: {
          src: adora2profeature2,
          alt: 'adora2 pro Feature 2'
        },
      },
      {
        title: '语音和视频多模态交互',
        description:
          'ADORA 2 Pro机器人大脑具备视觉和语言输入理解能力，用户可以通过语言或视觉指令自然、轻松地与机器人互动，实现无缝沟通。',
        icon: '',
        image: {
          src: adora2profeature3,
          alt: 'adora2 pro Feature 3'
        },
      },
      {
        title: '适用于批量动作数据采集',
        description:
          'ADORA 2 Pro机器人搭配低成本高精度机械臂和直观的数据采集工具，适用于进行批量数据采集的工作，包括家务操作、工业搬取转运等等场景。',
        icon: '',
        image: {
          src: adora2profeature4,
          alt: 'adora2 pro Feature 4'
        },
      },
    ]}
  />

  <!-- Apply -->
    <Features4
    columns={2}
    isBeforeContent={true}
    title="应用场景"
    subtitle="ADORA 2 Pro的应用场景"
    items={[
      {
        title: '数据采集',
        description:
          '',
        icon: '',
        image: {
          src: adora2proapply1,
          alt: 'adora2 Pro apply1'
        },
      },
      {
        title: '物品分拣',
        description:
          '',
        icon: '',
        image: {
          src: adora2proapply2,
          alt: 'adora2 Pro apply2'
        },
      },
      {
        title: '家务劳动',
        description:
          '',
        icon: '',
        image: {
          src: adora2proapply3,
          alt: 'adora2 Pro apply3'
        },
      },
      {
        title: '运动竞赛',
        description:
          '',
        icon: '',
        image: {
          src: adora2proapply4,
          alt: 'adora2 Pro apply4'
        },
      },
    ]}
  />
  
  <!-- 参数规格 -->
  <ParameterTable 
    title="Adora 2 Pro参数规格"
    subtitle="主要的软件和硬件参数"

    MyTableHeads = {[
      {
        tablehead1: "模块",
        tablehead2: "内容",
        tablehead3: "参数",
      },
    ]}

    MyTableCells1 = {[
	  {
		 module: "整机参数",
		 content: "产品重量",
		 parameter: "约60KG",
	  },
	  {
		 module: "整机参数",
		 content: "产品尺寸",
		 parameter: "420mm(高)*520mm（肩宽）*1500mm（体厚）（不含机械臂）",
	  },
    {
		 module: "整机参数",
		 content: "最大移动速度",
		 parameter: "1.2m/s",
	  },
    {
		 module: "整机参数",
		 content: "工作时长",
		 parameter: "2H",
	  },
   ]}

   MyTableCells2 = {[
	  {
		 module: "算力单元",
		 content: "主板配置",
		 parameter: "RK3588/NVIDIA NX/昇腾310P",
	  },
	  {
		 module: "算力单元",
		 content: "硬盘",
		 parameter: "128GB NVMe固态硬盘",
	  },
    {
		 module: "算力单元",
		 content: "操作系统",
		 parameter: "Ubuntu/开源鸿蒙OS",
	  },
    ]}

    MyTableCells3 = {[
	  {
		 module: "视觉和距离传感器",
		 content: "深度相机",
		 parameter: "3个",
	  },
	  {
		 module: "视觉和距离传感器",
		 content: "激光雷达",
		 parameter: "无",
	  },
   ]}

    MyTableCells4 = {[
	  {
		 module: "机械臂和末端执行器",
		 content: "机械臂配置",
		 parameter: "2只/7自由度",
	  },
	  {
		 module: "机械臂和末端执行器",
		 content: "机械臂精度",
		 parameter: "1mm",
	  },
    {
		 module: "机械臂和末端执行器",
		 content: "机械臂工作半径",
		 parameter: "600mm",
	  },
	  {
		 module: "机械臂和末端执行器",
		 content: "末端执行器",
		 parameter: "二指夹爪",
	  },
    {
		 module: "机械臂和末端执行器",
		 content: "最大抓握重量",
		 parameter: "2kg",
	  },
   ]}
  />
</Layout>