---
import Layout from '~/layouts/PageLayout.astro';
import { Image } from 'astro:assets';
import wechatQRCode from '~/assets/images/wechat-qrcode.png';

const metadata = {
  title: '服务与支持',
};

// Contact methods
const contactMethods = [
  { title: '微信', description: '请添加微信号联系：nhuang', icon: 'wechat' },
  { title: '邮箱', description: 'nhuang@dora-rs.org', icon: 'email' },
];

// Social media
const socialMedia = [
  { title: '微信公众号', description: '请扫码关注', icon: 'wechat', hasQR: true },
  { title: '哔哩哔哩', description: '建设中，敬请期待', icon: 'bilibili' },
  { title: '腾讯视频', description: '建设中，敬请期待', icon: 'qq' },
  { title: '抖音', description: '建设中，敬请期待', icon: 'tiktok' },
];

