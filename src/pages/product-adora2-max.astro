---
import Features4 from '~/components/widgets/Features4.astro';
import ParameterTable from '~/components/widgets/ParameterTable.astro';
import Layout from '~/layouts/PageLayout.astro';
import adora2maxfeature1 from '~/assets/images/product/adora2-max/adora2-max-feature1.png';
import adora2maxfeature2 from '~/assets/images/product/adora2-max/adora2-max-feature2.png';
import adora2maxfeature3 from '~/assets/images/product/adora2-max/adora2-max-feature3.png';
import adora2maxfeature4 from '~/assets/images/product/adora2-max/adora2-max-feature4.png';
import adora2maxapply1 from '~/assets/images/product/adora2-max/adora2-max-apply1.png';
import adora2maxapply2 from '~/assets/images/product/adora2-max/adora2-max-apply2.png';
import adora2maxapply3 from '~/assets/images/product/adora2-max/adora2-max-apply3.png';
import adora2maxapply4 from '~/assets/images/product/adora2-max/adora2-max-apply4.png';

const metadata = {
  title: 'Adora2 Max机器人',
};
---

<Layout metadata={metadata}>
    <!-- features -->
    <Features4
    columns={2}
    isBeforeContent={true}
    title="ADORA2 Max"
    subtitle="四轮升降臂通用型移动式机器人"
    items={[
      {
        title: '升降臂使用场景更宽广',
        description:
          '双侧机械臂升降幅度可达70cm，从地面到吊柜都可轻松触达，适应更宽广的使用场景。',
        icon: '',
        image: {
          src: adora2maxfeature1,
          alt: 'adora2 Max Feature 1'
        },
      },
      {
        title: '高效精细动作数据采集',
        description:
          'ADORA2 Max机器人配备高精度机械臂和直观的数据采集工具，可以轻松记录演示的工作任务，包括家庭桌面整理、洗衣叠衣，拿取物品；工业搬取转运等等。',
        icon: '',
        image: {
          src: adora2maxfeature2,
          alt: 'adora2 Max Feature 2'
        },
      },
      {
        title: '语音和视频多模态交互',
        description:
          'ADORA2 Max机器人大脑具备视觉和语言输入理解能力，用户可以通过语言或视觉指令自然、轻松地与机器人互动，实现无缝沟通。',
        icon: '',
        image: {
          src: adora2maxfeature3,
          alt: 'adora2 Max Feature 3'
        },
      },
      {
        title: '具身智能科研生态支持',
        description:
          'ADORA2 Max机器人连接活跃的机器人社区生态，通过共享知识与经验形成集体“大脑”，实现所有机器人技能的快速提升，持续增强机器人的效能。',
        icon: '',
        image: {
          src: adora2maxfeature4,
          alt: 'adora2 Max Feature 4'
        },
      },
    ]}
  />

  <!-- Apply -->
    <Features4
    columns={2}
    isBeforeContent={true}
    title="应用场景"
    subtitle="ADORA2 Max的应用场景"
    items={[
      {
        title: '家务劳动',
        description:
          '',
        icon: '',
        image: {
          src: adora2maxapply1,
          alt: 'adora2 Max apply1'
        },
      },
      {
        title: '数据采集',
        description:
          '',
        icon: '',
        image: {
          src: adora2maxapply2,
          alt: 'adora2 Max apply2'
        },
      },
      {
        title: '科研教学',
        description:
          '',
        icon: '',
        image: {
          src: adora2maxapply3,
          alt: 'adora2 Max apply3'
        },
      },
      {
        title: '医院预诊',
        description:
          '',
        icon: '',
        image: {
          src: adora2maxapply4,
          alt: 'adora2 Max apply4'
        },
      },
    ]}
  />
  
  <!-- 参数规格 -->
  <ParameterTable 
    title="Adora2 Max参数规格"
    subtitle="主要的软件和硬件参数"

    MyTableHeads = {[
      {
        tablehead1: "模块",
        tablehead2: "内容",
        tablehead3: "参数",
      },
    ]}

    MyTableCells1 = {[
	  {
		 module: "整机参数",
		 content: "产品重量",
		 parameter: "约70KG",
	  },
	  {
		 module: "整机参数",
		 content: "产品尺寸",
		 parameter: "420mm(高)*520mm（肩宽）*1500mm（体厚）（不含机械臂）",
	  },
    {
		 module: "整机参数",
		 content: "最大移动速度",
		 parameter: "1.2m/s",
	  },
    {
		 module: "整机参数",
		 content: "工作时长",
		 parameter: "2H",
	  },
   ]}

   MyTableCells2 = {[
	  {
		 module: "算力单元",
		 content: "主板配置",
		 parameter: "RK3588/NVIDIA NX/昇腾310P",
	  },
	  {
		 module: "算力单元",
		 content: "硬盘",
		 parameter: "128GB NVMe固态硬盘",
	  },
    {
		 module: "算力单元",
		 content: "操作系统",
		 parameter: "Ubuntu/开源鸿蒙OS",
	  },
    ]}

    MyTableCells3 = {[
	  {
		 module: "视觉和距离传感器",
		 content: "深度相机",
		 parameter: "3个",
	  },
	  {
		 module: "视觉和距离传感器",
		 content: "激光雷达",
		 parameter: "1个",
	  },
   ]}

    MyTableCells4 = {[
	  {
		 module: "机械臂和末端执行器",
		 content: "机械臂配置",
		 parameter: "2只/7自由度",
	  },
	  {
		 module: "机械臂和末端执行器",
		 content: "机械臂精度",
		 parameter: "1mm",
	  },
    {
		 module: "机械臂和末端执行器",
		 content: "机械臂工作半径",
		 parameter: "600mm",
	  },
	  {
		 module: "机械臂和末端执行器",
		 content: "末端执行器",
		 parameter: "二指夹爪",
	  },
    {
		 module: "机械臂和末端执行器",
		 content: "最大抓握重量",
		 parameter: "2kg",
	  },
   ]}
  />
</Layout>