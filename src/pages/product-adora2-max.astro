---
import Features4 from '~/components/widgets/Features4.astro';
import ParameterTable from '~/components/widgets/ParameterTable.astro';
import Layout from '~/layouts/PageLayout.astro';
import adora2maxfeature1 from '~/assets/images/product/adora2-max/adora2-max-feature1.png';
import adora2maxfeature2 from '~/assets/images/product/adora2-max/adora2-max-feature2.png';
import adora2maxfeature3 from '~/assets/images/product/adora1-mini/adora1-mini-feature3.png';
import adora2maxfeature4 from '~/assets/images/product/adora1-mini/adora1-mini-feature4.png';

const metadata = {
  title: 'Adora2 Max',
};
---

<Layout metadata={metadata}>
    <!-- features -->
    <Features4
    columns={2}
    isBeforeContent={true}
    title="ADORA2 Max"
    subtitle="四轮升降臂通用型移动式机器人"
    items={[
      {
        title: '升降臂使用场景更宽广',
        description:
          '双侧机械臂升降幅度可达70cm，从地面到吊柜都可轻松触达，适应更宽广的使用场景。',
        icon: '',
        image: {
          src: adora2maxfeature1,
          alt: 'adora2 Max Feature 1'
        },
      },
      {
        title: '高效精细动作数据采集',
        description:
          'Adora机器人配备高精度机械臂和直观的数据采集工具，可以轻松记录演示的工作任务，包括家庭桌面整理、洗衣叠衣，拿取物品；工业搬取转运等等。',
        icon: '',
        image: {
          src: adora2maxfeature2,
          alt: 'adora2 Max Feature 2'
        },
      },
      {
        title: '语音和视频多模态交互',
        description:
          'Adora机器人大脑具备视觉和语言输入理解能力，用户可以通过语言或视觉指令自然、轻松地与机器人互动，实现无缝沟通。',
        icon: '',
        image: {
          src: adora2maxfeature3,
          alt: 'adora2 Max Feature 3'
        },
      },
      {
        title: '具身智能科研生态支持',
        description:
          'Adora机器人连接活跃的机器人社区生态，通过共享知识与经验形成集体“大脑”，实现所有机器人技能的快速提升，持续增强机器人的效能。',
        icon: '',
        image: {
          src: adora2maxfeature4,
          alt: 'adora2 Max Feature 4'
        },
      },
    ]}
  />

  <!-- Apply -->
    <Features4
    columns={2}
    isBeforeContent={true}
    title="应用场景"
    subtitle="ADORA2 Max的应用场景"
    items={[
      {
        title: '家务劳动',
        description:
          '',
        icon: '',
        image: {
          src: adora2maxfeature1,
          alt: 'adora2 Max apply1'
        },
      },
      {
        title: '数据采集',
        description:
          '',
        icon: '',
        image: {
          src: adora2maxfeature2,
          alt: 'adora2 Max apply2'
        },
      },
      {
        title: '科研教学',
        description:
          '',
        icon: '',
        image: {
          src: adora2maxfeature3,
          alt: 'adora2 Max apply3'
        },
      },
      {
        title: '工业操作',
        description:
          '',
        icon: '',
        image: {
          src: adora2maxfeature4,
          alt: 'adora2 Max apply4'
        },
      },
    ]}
  />
  
  <!-- 参数规格 -->
  <ParameterTable 
    title="Adora2 Max参数规格"
    subtitle="主要的软件和硬件参数"

    MyTableHeads = {[
      {
        tablehead1: "模块",
        tablehead2: "内容",
        tablehead3: "参数",
      },
    ]}

    MyTableCells1 = {[
	  {
		 module: "整体参数",
		 content: "产品重量",
		 parameter: "约30KG",
	  },
	  {
		 module: "整体参数",
		 content: "总体尺寸",
		 parameter: "不含机械臂：约480mm(宽)*716mm(长)*1386mm(高)，含机械臂：约755mm(宽)*716mm(长)*1386mm(高)",
	  },
	  {
		 module: "整体参数",
		 content: "工作时长",
		 parameter: "约2H",
	  },
	  {
		 module: "整体参数",
		 content: "最大速度",
		 parameter: "约1.2m/s",
	  },
	  {
		 module: "整体参数",
		 content: "电池容量",
		 parameter: "24V 20AH",
	  },
	  {
		 module: "整体参数",
		 content: "接口",
		 parameter: "电源开关，急停按钮*1，USB*2，网口*1，HDMI*1，天线延长线口*1",
	  },
   ]}

   MyTableCells2 = {[
	  {
		 module: "轮式底盘",
		 content: "尺寸",
		 parameter: "长716*宽480*高XXXmm",
	  },
	  {
		 module: "轮式底盘",
		 content: "载重",
		 parameter: "80KG",
	  },
	  {
		 module: "轮式底盘",
		 content: "电机类型",
		 parameter: "直流无刷伺服电机",
	  },
	  {
		 module: "轮式底盘",
		 content: "转向方式",
		 parameter: "双轮差速原地转向",
	  },
   ]}
  />
</Layout>