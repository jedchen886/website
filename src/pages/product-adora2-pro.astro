---
import Features4 from '~/components/widgets/Features4.astro';
import ParameterTable from '~/components/widgets/ParameterTable.astro';
import Layout from '~/layouts/PageLayout.astro';
import adora2profeature1 from '~/assets/images/product/adora2-pro/adora2-pro-feature1.png';
import adora2profeature2 from '~/assets/images/product/adora2-pro/adora2-pro-feature2.png';
import adora2profeature3 from '~/assets/images/product/adora2-pro/adora2-pro-feature3.png';
import adora2profeature4 from '~/assets/images/product/adora2-pro/adora2-pro-feature4.png';
import adora2proapply1 from '~/assets/images/product/adora2-pro/adora2-pro-apply1.png';
import adora2proapply2 from '~/assets/images/product/adora2-pro/adora2-pro-apply2.png';
import adora2proapply3 from '~/assets/images/product/adora2-pro/adora1-mini-feature1.png';
import adora2proapply4 from '~/assets/images/product/adora2-pro/adora2-pro-apply4.png';

const metadata = {
  title: 'Adora2 Pro',
};
---

<Layout metadata={metadata}>
    <!-- features -->
    <Features4
    columns={2}
    isBeforeContent={true}
    title="ADORA2 Pro"
    subtitle="三轮升降通用型移动式机器人"
    items={[
      {
        title: '小巧三轮底盘运动灵活',
        description:
          'ADORA2 Pro机器人采用小底盘设计方案，在比较狭窄的室内运动时灵活方便。',
        icon: '',
        image: {
          src: adora2profeature1,
          alt: 'adora2 pro Feature 1'
        },
      },
      {
        title: '配四路相机和激光雷达',
        description:
          '双臂腕部、头部、柱顶各配1个相机总计四路深度和广角相机，底盘配备激光雷达，能够实现更精准的环境感知和导航。',
        icon: '',
        image: {
          src: adora2profeature2,
          alt: 'adora2 pro Feature 2'
        },
      },
      {
        title: '语音和视频多模态交互',
        description:
          'ADORA2 Pro机器人大脑具备视觉和语言输入理解能力，用户可以通过语言或视觉指令自然、轻松地与机器人互动，实现无缝沟通。',
        icon: '',
        image: {
          src: adora2profeature3,
          alt: 'adora2 pro Feature 3'
        },
      },
      {
        title: '适用于批量动作数据采集',
        description:
          'ADORA2 Pro机器人搭配低成本高精度机械臂和直观的数据采集工具，适用于进行批量数据采集的工作，包括家务操作、工业搬取转运等等场景。',
        icon: '',
        image: {
          src: adora2profeature4,
          alt: 'adora2 pro Feature 4'
        },
      },
    ]}
  />

  <!-- Apply -->
    <Features4
    columns={2}
    isBeforeContent={true}
    title="应用场景"
    subtitle="ADORA2 Pro的应用场景"
    items={[
      {
        title: '数据采集',
        description:
          '',
        icon: '',
        image: {
          src: adora2proapply1,
          alt: 'adora2 Pro apply1'
        },
      },
      {
        title: '物品分拣',
        description:
          '',
        icon: '',
        image: {
          src: adora2proapply2,
          alt: 'adora2 Pro apply2'
        },
      },
      {
        title: '家务劳动',
        description:
          '',
        icon: '',
        image: {
          src: adora2proapply3,
          alt: 'adora2 Pro apply3'
        },
      },
      {
        title: '运动竞赛',
        description:
          '',
        icon: '',
        image: {
          src: adora2proapply4,
          alt: 'adora2 Pro apply4'
        },
      },
    ]}
  />
  
  <!-- 参数规格 -->
  <ParameterTable 
    title="Adora2 Pro参数规格"
    subtitle="主要的软件和硬件参数"

    MyTableHeads = {[
      {
        tablehead1: "模块",
        tablehead2: "内容",
        tablehead3: "参数",
      },
    ]}

    MyTableCells1 = {[
	  {
		 module: "整体参数",
		 content: "产品重量",
		 parameter: "约30KG",
	  },
	  {
		 module: "整体参数",
		 content: "总体尺寸",
		 parameter: "不含机械臂：约480mm(宽)*716mm(长)*1386mm(高)，含机械臂：约755mm(宽)*716mm(长)*1386mm(高)",
	  },
	  {
		 module: "整体参数",
		 content: "工作时长",
		 parameter: "约2H",
	  },
	  {
		 module: "整体参数",
		 content: "最大速度",
		 parameter: "约1.2m/s",
	  },
	  {
		 module: "整体参数",
		 content: "电池容量",
		 parameter: "24V 20AH",
	  },
	  {
		 module: "整体参数",
		 content: "接口",
		 parameter: "电源开关，急停按钮*1，USB*2，网口*1，HDMI*1，天线延长线口*1",
	  },
   ]}

   MyTableCells2 = {[
	  {
		 module: "轮式底盘",
		 content: "尺寸",
		 parameter: "长716*宽480*高XXXmm",
	  },
	  {
		 module: "轮式底盘",
		 content: "载重",
		 parameter: "80KG",
	  },
	  {
		 module: "轮式底盘",
		 content: "电机类型",
		 parameter: "直流无刷伺服电机",
	  },
	  {
		 module: "轮式底盘",
		 content: "转向方式",
		 parameter: "双轮差速原地转向",
	  },
   ]}
  />
</Layout>