---
import Features4 from '~/components/widgets/Features4.astro';
import ParameterTable from '~/components/widgets/ParameterTable.astro';
import Layout from '~/layouts/PageLayout.astro';
import adora2maxfeature1 from '~/assets/images/product/adora2-max/adora2-max-feature1.png';
import adora2maxfeature2 from '~/assets/images/product/adora2-max/adora2-max-feature2.png';
import adora2maxfeature3 from '~/assets/images/product/adora2-max/adora2-max-feature3.png';
import adora2maxfeature4 from '~/assets/images/product/adora2-max/adora2-max-feature4.png';
import adora2maxapply1 from '~/assets/images/product/adora2-max/adora2-max-apply1.png';
import adora2maxapply2 from '~/assets/images/product/adora2-max/adora2-max-apply2.png';
import adora2maxapply3 from '~/assets/images/product/adora2-max/adora2-max-apply3.png';
import adora2maxapply4 from '~/assets/images/product/adora2-max/adora2-max-apply4.png';

const metadata = {
  title: 'Adora 2 Max Robot',
};
---

<Layout metadata={metadata} defaultNavTheme="dark">
  <!-- Hero -->
  <section class="relative -mt-[76px] not-prose">
    <div class="relative w-full">
      <img
        src="/images/adora-2-max-hospital-clean.png"
        alt="ADORA 2 Max"
        class="w-full h-auto"
      />
      <div class="absolute inset-0 flex flex-col items-center justify-center">
        <div class="bg-black/20 backdrop-blur-sm px-8 py-6 rounded-2xl">
          <h1 class="text-white text-5xl md:text-6xl lg:text-7xl tracking-tight font-bold text-center">
            ADORA 2 Max
          </h1>
          <p class="text-xl md:text-2xl text-white/90 mt-4 text-center">
            Four-Wheeled Lifting Arm Universal Mobile Robot
          </p>
        </div>
      </div>
    </div>
  </section>

    <!-- features -->
    <Features4
    columns={2}
    isBeforeContent={true}
    title="Product Features"
    subtitle="Core advantages of ADORA 2 Max"
    items={[
      {
        title: 'Lifting Arms for Wider Application Scenarios',
        description:
          'The dual robotic arms can lift up to 70cm, easily reaching from floor level to overhead cabinets, adapting to a wider range of use scenarios.',
        icon: '',
        image: {
          src: adora2maxfeature1,
          alt: 'adora2 Max Feature 1'
        },
      },
      {
        title: 'Efficient & Precise Motion Data Collection',
        description:
          'ADORA 2 Max robot is equipped with high-precision robotic arms and intuitive data collection tools, easily recording demonstrated work tasks including home desktop organization, laundry folding, item retrieval, industrial handling and transportation, and more.',
        icon: '',
        image: {
          src: adora2maxfeature2,
          alt: 'adora2 Max Feature 2'
        },
      },
      {
        title: 'Voice and Video Multimodal Interaction',
        description:
          'ADORA 2 Max robot brain has visual and language understanding capabilities, allowing users to interact naturally and effortlessly through voice or visual commands for seamless communication.',
        icon: '',
        image: {
          src: adora2maxfeature3,
          alt: 'adora2 Max Feature 3'
        },
      },
      {
        title: 'Embodied AI Research Ecosystem Support',
        description:
          'ADORA 2 Max robot connects to an active robot community ecosystem, forming a collective "brain" through shared knowledge and experience to rapidly enhance all robot skills and continuously improve robot effectiveness.',
        icon: '',
        image: {
          src: adora2maxfeature4,
          alt: 'adora2 Max Feature 4'
        },
      },
    ]}
  />

  <!-- Apply -->
    <Features4
    columns={2}
    isBeforeContent={true}
    title="Applications"
    subtitle="Application scenarios for ADORA 2 Max"
    items={[
      {
        title: 'Household Chores',
        description:
          '',
        icon: '',
        image: {
          src: adora2maxapply1,
          alt: 'adora2 Max apply1'
        },
      },
      {
        title: 'Data Collection',
        description:
          '',
        icon: '',
        image: {
          src: adora2maxapply2,
          alt: 'adora2 Max apply2'
        },
      },
      {
        title: 'Research & Education',
        description:
          '',
        icon: '',
        image: {
          src: adora2maxapply3,
          alt: 'adora2 Max apply3'
        },
      },
      {
        title: 'Hospital Triage',
        description:
          '',
        icon: '',
        image: {
          src: adora2maxapply4,
          alt: 'adora2 Max apply4'
        },
      },
    ]}
  />

  <!-- Specifications -->
  <ParameterTable
    title="Adora 2 Max Specifications"
    subtitle="Main software and hardware parameters"

    MyTableHeads = {[
      {
        tablehead1: "Module",
        tablehead2: "Item",
        tablehead3: "Parameter",
      },
    ]}

    MyTableCells1 = {[
	  {
		 module: "System Parameters",
		 content: "Product Weight",
		 parameter: "Approx. 70KG",
	  },
	  {
		 module: "System Parameters",
		 content: "Product Dimensions",
		 parameter: "420mm(H) × 520mm(Shoulder Width) × 1500mm(Depth) (excluding arm)",
	  },
    {
		 module: "System Parameters",
		 content: "Max Speed",
		 parameter: "1.2m/s",
	  },
    {
		 module: "System Parameters",
		 content: "Working Duration",
		 parameter: "2H",
	  },
   ]}

   MyTableCells2 = {[
	  {
		 module: "Computing Unit",
		 content: "Mainboard",
		 parameter: "RK3588/NVIDIA NX/Ascend 310P",
	  },
	  {
		 module: "Computing Unit",
		 content: "Storage",
		 parameter: "128GB NVMe SSD",
	  },
    {
		 module: "Computing Unit",
		 content: "Operating System",
		 parameter: "Ubuntu/OpenHarmony OS",
	  },
    ]}

    MyTableCells3 = {[
	  {
		 module: "Vision & Distance Sensors",
		 content: "Depth Camera",
		 parameter: "3 units",
	  },
	  {
		 module: "Vision & Distance Sensors",
		 content: "LiDAR",
		 parameter: "1 unit",
	  },
   ]}

    MyTableCells4 = {[
	  {
		 module: "Robotic Arm & End Effector",
		 content: "Arm Configuration",
		 parameter: "2 arms / 7 DOF",
	  },
	  {
		 module: "Robotic Arm & End Effector",
		 content: "Arm Precision",
		 parameter: "1mm",
	  },
    {
		 module: "Robotic Arm & End Effector",
		 content: "Arm Working Radius",
		 parameter: "600mm",
	  },
	  {
		 module: "Robotic Arm & End Effector",
		 content: "End Effector",
		 parameter: "Two-finger Gripper",
	  },
    {
		 module: "Robotic Arm & End Effector",
		 content: "Max Grip Weight",
		 parameter: "2kg",
	  },
   ]}
  />
</Layout>
