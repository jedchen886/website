---
import Layout from '~/layouts/Layout.astro';
import Header from '~/components/widgets/Header.astro';
import Footer from '~/components/widgets/Footer.astro';
/* import Announcement from '~/components/widgets/Announcement.astro';
 */
import { headerDataCN, headerDataEN, footerDataCN, footerDataEN } from '~/navigation';

import type { MetaData } from '~/types';

export interface Props {
  metadata?: MetaData;
  /** Set nav theme: 'dark' for pages with dark hero, 'light' for pages without hero */
  defaultNavTheme?: 'dark' | 'light';
}

const { metadata, defaultNavTheme = 'light' } = Astro.props;

// Detect current language from URL
const pathname = Astro.url.pathname;
const isEnglishPage = pathname.startsWith('/en/') || pathname === '/en';
const headerData = isEnglishPage ? headerDataEN : headerDataCN;
const footerData = isEnglishPage ? footerDataEN : footerDataCN;
---

<Layout metadata={metadata}>
<!--   <slot name="announcement">
    <Announcement />
  </slot> -->
  <slot name="header">
    <Header {...headerData} isSticky defaultNavTheme={defaultNavTheme} />
  </slot>
  <main>
    <slot />
  </main>
  <slot name="footer">
    <Footer {...footerData} />
  </slot>
</Layout>
